{% extends 'SonataAdminBundle:CRUD:base_list.html.twig' %}

{% block actions %}
{% endblock %}
{% block list_filters %}
{% endblock %}
{% block list_filters_actions %}
{% endblock %}
{% block list_table %}
    <div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header">
                <h4 class="box-title">
                    Výplatnice
                </h4>
            </div>
            <div class="box-body">
                <form class="salary_form" action="" method="POST">
                    <div class="form-group">
                        <label class="control-label required" for="s5a3a32cb524c8_salaryDate">
                            Měsíc ze kterého vypočítat výplatu:
                        </label>


                        <div class="sonata-ba-field sonata-ba-field-standard-natural">
                            <div class="input-group">
                                <div class='input-group date' id='s5a3a32cb524c8_salaryDate'><input type="text"
                                                                                                    name="salaryDate"
                                                                                                    required="required"
                                                                                                    class="sonata-medium-date form-control"
                                                                                                    data-date-format="MM.YYYY"
                                                                                                    value="{{ "now"|date("m.Y") }}"/><span
                                            class="input-group-addon"><span class="fa fa-calendar"></span></span></div>
                            </div>
                            <script type="text/javascript">
                                jQuery(function ($) {
                                    $('#s5a3a32cb524c8_salaryDate').datetimepicker({
                                        "pickTime": false,
                                        "dateFormat": 'MM.YYYY',
                                        "pickDate": true,
                                        "useCurrent": true,
                                        "minDate": "1\/1\/1900",
                                        "maxDate": "{{ "now"|date("m.Y") }}",
                                        "showToday": true,
                                        "language": "cs",
                                        "defaultDate": "",
                                        "disabledDates": [],
                                        "enabledDates": [],
                                        "icons": {
                                            "time": "fa fa-clock-o",
                                            "date": "fa fa-calendar",
                                            "up": "fa fa-chevron-up",
                                            "down": "fa fa-chevron-down"
                                        },
                                        "useStrict": false,
                                        "sideBySide": false,
                                        "daysOfWeekDisabled": [],
                                        "collapse": true,
                                        "calendarWeeks": false,
                                        "viewMode": "months",
                                        "minViewMode": "months",
                                        "useSeconds": false
                                    });
                                });
                            </script>

                        </div>
                    </div>
                    {% if schools | length > 0 %}
                        <div class="form-group">
                            <label class="control-label required">
                                Škola
                            </label>
                            <div class="sonata-ba-field sonata-ba-field-standard-natural">
                                <select name="school" class="form-group">
                                    {% for school in schools %}
                                        <option value="{{ school.id }}">{{ school.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    {% endif %}
                    <div class="row">
                        <div class="col-md-12">
                            <input class="btn btn-success" type="submit" value="PDF" name="btn_create"/>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
{% endblock %}