{% extends 'SonataAdminBundle:CRUD:base_list.html.twig' %}

{% block actions %}
{% endblock %}
{% block list_filters %}
{% endblock %}
{% block list_filters_actions %}
{% endblock %}
{% block list_table %}
    <div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header">
                <h4 class="box-title">
                    Import dat
                </h4>
            </div>
            <div class="box-body">
                <form class="import_form" action="" method="POST" enctype="multipart/form-data">

                    <div class="form-group">
                        <label class="control-label required">
                            Soubor
                        </label>
                        <div class="sonata-ba-field sonata-ba-field-standard-natural">
                            <input type="file" name="import_document" class=""/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label required">
                            Typ souboru
                        </label>
                        <div class="sonata-ba-field sonata-ba-field-standard-natural">
                            <select name="import_document_type" class="form-group">
                                <option value="xml">XML</option>
                                <option value="csv">CSV</option>
                            </select>
                        </div>
                    </div>
                    {% if schools | length > 0 %}
                        <div class="form-group">
                            <label class="control-label required">
                                Škola
                            </label>
                            <div class="sonata-ba-field sonata-ba-field-standard-natural">
                                <select name="school" class="form-group">
                                    {% for school in schools %}
                                        <option value="{{ school.id }}">{{ school.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    {% endif %}
                    <div class="row">
                        <div class="col-md-12">
                            <input class="btn btn-success" type="submit" value="Nahrát" name="btn_create"/>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
{% endblock %}